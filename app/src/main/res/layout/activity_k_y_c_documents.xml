<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_200">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="KYC Details"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pan"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/etPanNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:inputType="textCapWords"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pan"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPanPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pan Pic"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_AdharNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:inputType="number"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Front"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvAdharPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adhaar  Front Pic"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Back"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvAadharBackDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adhaar Back Pic"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Profile"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Profile Pic"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Name"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_AccName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Name"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Number"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_AccNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="A/c Number"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IFSC Code"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_ifscCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IFSC Code"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Name"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_BankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch Name"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_BranchName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheque/Passbook"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvCheckPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cheque/passbook Pic"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"/>


                <Button
                    android:id="@+id/btnUpdateKyc"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="Update"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>