<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/comment_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   
    
            <RelativeLayout android:background="#2196F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_layout">

                <ImageView
                    android:id="@+id/Goback"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    android:padding="10dp" android:tint="@color/white"
                    android:background="@drawable/circle"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <ScrollView android:background="#A7D8FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/dynamic_anm_list"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMI Payment Details"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/skyblue"
                            android:textSize="22dp" />
                        
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:text="Profarma No*"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                                <EditText
                                    android:id="@+id/performano_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/rectangle"
                                    android:backgroundTint="#CCCACA"
                                    
                                   
                                    android:hint="Enter Profarma No."
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="20dp"
                                   
                                    android:layout_marginRight="20dp"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="30"
                                    android:maxLines="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey"
                                    android:textSize="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:text="Installment No*"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                                <EditText
                                    android:id="@+id/inst_no_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/rectangle"
                                    android:backgroundTint="#CCCACA"


                                    android:hint="Enter Profarma No."
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="20dp"
                                   
                                    android:layout_marginRight="20dp"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="30"
                                    android:maxLines="1"  android:clickable="false"
                                    android:focusable="false"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:text="Amount*"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                                <EditText
                                    android:id="@+id/amount_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/rectangle"
                                    android:backgroundTint="#CCCACA"
                                   
                                    android:hint="Enter Profarma No."
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="20dp"
                                   
                                    android:layout_marginRight="20dp"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="30"
                                    android:maxLines="1"  android:clickable="false"
                                    android:focusable="false"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey"
                                    android:textSize="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:text="Payment Mode*"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                                <EditText
                                    android:id="@+id/paymode_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/rectangle"

                                    android:backgroundTint="#CCCACA"
                                    android:text="Fund Wallet"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="20dp"
                                   
                                    android:layout_marginRight="20dp"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="30"
                                    android:maxLines="1"  android:clickable="false"
                                    android:focusable="false"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="20dp"
                                android:text="Remarks*"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <EditText
                                android:id="@+id/remark_et"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/rectangle"
                                
                               
                                android:hint="Enter Profarma No."
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                               
                                android:layout_marginRight="20dp"
                                android:inputType="textEmailAddress"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="16dp" />
                        </LinearLayout>


                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/continue_btn"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_btn"
                        android:backgroundTint="@color/skyblue"
                        android:elevation="10dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </ScrollView>


</LinearLayout>
