<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_new"
    tools:context=".ActivationArea.AddFundInrActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_200">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Fund INR"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/imgAddInr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#F3014647"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gold"/>
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction No."
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gold"/>
            <EditText
                android:id="@+id/et_Transno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transaction No."
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UTR No."
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gold"/>
            <EditText
                android:id="@+id/et_UtrNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UTR No."
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receipt"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gold"/>
            <TextView
                android:id="@+id/tvReceiptPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receipt Pic"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"/>
            <Button
                android:id="@+id/btnAddFund"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Add Fund"
                android:textSize="15sp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>